# Application
NODE_ENV=local
PORT=3000
API_PREFIX=api/v1
APP_VERSION=0.0.1

# Database - DynamoDB
AWS_REGION=ap-southeast-1
DYNAMODB_TABLE_SCHEDULERS=schedulers
DYNAMODB_TABLE_STATUS_HISTORY=scheduler_status_history
DYNAMODB_ENDPOINT=http://localhost:8000

# Queue - SQS (Optional for Phase 2)
SQS_QUEUE_URL=
SQS_ENABLED=false

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C1234567890
SLACK_ENABLED=true

# Monitoring
CLOUDWATCH_ENABLED=false
DATADOG_ENABLED=false

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Scheduler Worker
SLACK_UPDATE_INTERVAL_MINUTES=60
SLACK_START_HOUR=0
SLACK_END_HOUR=6
SLACK_TIMEZONE=Asia/Jakarta

# Alerting
HEARTBEAT_TIMEOUT_MINUTES=10
ALERT_MENTION_USER_ID=U1234567890

# API Authentication
API_KEY_HEADER=x-api-key
API_KEYS=service-a-key,service-b-key,service-c-key
